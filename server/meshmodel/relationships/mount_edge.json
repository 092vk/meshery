{
    "apiVersion": "core.meshery.io/v1alpha1",
    "kind": "Edge",
    "metadata": {
      "description": "A relationship that represents a set of permissions"
    },
    "model": {
      "name": "core"
    },
    "subType": "Network",
    "selectors": {
      "deny": {
        "from": [
          {
            "kind": "Pod",
            "model": "Kubernetes"
          }
        ],
        "to": [
          {
            "kind": "Pod",
            "model": "Kubernetes"
          }
        ]
      },
      "allow":{
        "from": [
          {
            "kind": "Pod",
            "model": "Kubernetes"
          }
        ],
        "to": [
          { "kind": "PersistentVolume",
            "model": "Kubernetes"
          }
        ]
      }
    }
  }