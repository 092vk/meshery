{
    "apiVersion": "core.meshery.io/v1alpha1",
    "kind": "Hierarchical",
    "metadata": {
        "description": "A hierarchical inventory relationship in which a Core WASM Filter configuration is applied to an Istio Envoy Filter."
    },
    "model": {
        "name": "kubernetes",
        "version": "*",
        "displayName": "Kubernetes",
        "category": {
            "name": "Orchestration \u0026 Management",
            "metadata": null
        },
        "metadata": {}
    },
    "subType": "Inventory",    
    "referenceURI": "#configPatches.patch.value",
    "selectors": {
        "allow": {
            "from": [
                {
                    "kind": "EnvoyFilter",
                    "model": "Istio Base"
                }
            ],
            "to": [
                {   "kind": "WASMFilter",
                    "model": "Core"
                }
            ]
        },
        "deny": {
            "from": [],
            "to": []
        }
    }
}