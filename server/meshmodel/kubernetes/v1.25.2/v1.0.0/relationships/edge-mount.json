{
  "schemaVersion": "relationships.meshery.io/v1alpha2",
  "version": "v1.0.0",
  "kind": "Edge",
  "metadata": {
    "description": "A relationship that represents volume mounts between components",
    "capabilities": {
      "designer": {
        "edit": {
          "style": true,
          "config": false,
          "label": false
        }
      }
    }
  },
  "model": {
    "schemaVersion": "models.meshery.io/v1beta1",
    "version": "v1.0.0",
    "name": "kubernetes",
    "model": {
      "version": "v1.25.2"
    },
    "displayName": "Kubernetes",
    "category": {
      "name": "Orchestration \u0026 Management",
      "metadata": null
    },
    "metadata": {}
  },
  "subType": "Mount",
  "evaluationQuery": "edge_binding_relationship",
  "selectors": [
    {
      "deny": {
        "from": [
          {
            "kind": "Pod",
            "model": "kubernetes"
          }
        ],
        "to": [
          {
            "kind": "Pod",
            "model": "kubernetes"
          }
        ]
      },
      "allow": {
        "from": [
          {
            "kind": "Pod",
            "model": "kubernetes",
            "match": {
              "from": [
                {
                  "kind": "self",
                  "mutatedRef": [
                    [
                      "settings",
                      "spec",
                      "volumes",
                      "_",
                      "persistentVolumeClaim",
                      "claimName"
                    ]
                  ]
                }
              ],
              "to": [
                {
                  "kind": "PersistentVolumeClaim",
                  "mutatorRef": [
                    [
                      "name"
                    ]
                  ]
                }
              ]
            }
          }
        ],
        "to": [
          {
            "kind": "PersistentVolume",
            "model": "kubernetes",
            "match": {
              "from": [
                {
                  "kind": "self",
                  "mutatorRef": [
                    [
                      "name"
                    ],
                    [
                      "labels"
                    ]
                  ]
                }
              ],
              "to": [
                {
                  "kind": "PersistentVolumeClaim",
                  "mutatedRef": [
                    [
                      "settings",
                      "spec",
                      "volumeName"
                    ],
                    [
                      "settings",
                      "spec",
                      "selector",
                      "matchLabels"
                    ]
                  ]
                }
              ]
            }
          }
        ]
      }
    }
  ]
}