{
  "$id": "https://schema.meshery.io/relationship.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Relationships offer context-awareness as to how a particular Component is related to the other Component. There are many types of Relationships.",
  "required": [
    "apiVersion",
    "kind",
    "subType",
    "model"
  ],
  "additionalProperties": false,
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        }
      }
    },
    "model": {
      "$ref": "https://schema.meshery.io/model.json"
    },
    "subType": {
      "type": "string",
      "description": "Used for further classification of Relationships. Type and SubType together identifies a Relationship."
    },
    "selectors": {
      "type": "object",
      "description": "Optional selectors used to match Components. Absence of a selector means that it is applied to all Components.",
      "additionalProperties": false,
      "properties": {
        "from": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "kind": {
                "type": "string"
              },
              "model": {
                "type": "string"
              },
              "version": {
                "type": "string"
              }
            },
            "description": "Optional fields that are a part of the `from` selector. Absence of a field has an implied * meaning."
          }
        },
        "to": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "kind": {
                "type": "string"
              },
              "model": {
                "type": "string"
              },
              "version": {
                "type": "string"
              }
            },
            "description": "Optional fields that are a part of the `to` selector. Absence of a field has an implied * meaning."
          }
        }
      }
    }
  }
}
